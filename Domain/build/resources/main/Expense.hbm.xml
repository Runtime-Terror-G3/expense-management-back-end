<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="Expense" table="Expense">
        <id name="id" type="java.lang.Integer" column="id">
            <generator class="increment"/>
        </id>
        <many-to-one name="user" not-null="false" class="User" column="userId"/>
        <property name="amount" type="double" column="amount"/>
        <property name="category" column="category">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ExpenseCategory</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="date" type="java.time.LocalDateTime" column="date"/>
    </class>

</hibernate-mapping>